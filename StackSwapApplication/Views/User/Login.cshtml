@model StackSwapApplication.ViewModels.LoginVM

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="d-flex flex-column align-items-center m-5">

    <img class="app-logo" src="~/images/StackSwapLogo.jpg" alt="StackSwapLogo" />

    <h1 class="display-2 font">Sign In</h1>

    @{
        try
        {
            if (TempData["Error"] != null)
            {

                <script>swal("StackSwap", "Incorrect Username/Password!", "Error");</script>
            }
        }
        catch (Exception)
        {
            <label style="color:red">An error Occured</label>
        }
    }


    <form method="post" asp-controller="User" asp-action="Login" class="w-25">
        <div asp-validation-summary="ModelOnly"></div>


        <div class="form-group">
            <label class="form-label font" asp-for="Username"></label>
            <input class="form-control font" asp-for="Username" />
            <span asp-validation-for="Username"></span>
        </div>

        <div class="form-group">
            <label class="form-label font" asp-for="Password"></label>
            <input class="form-control font" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>

        <div class="d-flex flex-column mt-3 justify-content-center">
            <div class="form-group d-flex justify-content-between mb-2">
                <button type="submit" class="btn btn-primary font">Login</button>
            </div>
            <div class="d-flex align-items-center">
                <div class="me-1 font">Don't have an account?</div>
                <a class="text-decoration-none font" asp-action="Register" asp-controller="User"> Register </a>
            </div>
        </div>

    </form>
</body>
</html>
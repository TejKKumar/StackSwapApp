<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StackSwapApplication</title>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StackSwapApplication.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/WelcomeUserPage.css" asp-append-version="true" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Trade" asp-action="Index">StackSwap</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Trade" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Purchase" asp-action="Index">Catalogue</a>
                        </li>
                        <li class="nav-item">

                            <div class="center-menu">
                                <label class="menu-button" for="menu-open" aria-hidden="true"><span class="fas fa-user"></span></label>
                                <input class="menu-open" id="menu-open" type="checkbox" aria-hidden="true" />
                                <div class="menu" role="navigation">
                                    <a asp-action="Logout" asp-controller="User" class="fas fa-sign-out-alt fa-sm"></a>
                                    <a asp-action="ViewUsers" asp-controller="Trade" class="fas fa-exchange fa-sm" aria-hidden="true"></a>
                                    <a asp-action="ViewRequests" asp-controller="Trade" class="fas fa-inbox fa-sm"></a>
                                    <a asp-action="Profile" asp-controller="User" class="fas fa-history fa-sm"></a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



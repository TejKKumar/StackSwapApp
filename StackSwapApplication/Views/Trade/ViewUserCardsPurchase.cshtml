<form asp-action="ViewUserCardsPurchase" asp-controller="Trade">

<div class="exgrid_Item">
    <h1>@Model.Seller.Username 's Cards</h1>
    <table class="tableStyle">
        <thead>
            <tr>

                <th>

                    Champion
                </th>
                <th>
                    Tier
                </th>
                <th>
                    Damage
                </th>
                <th>
                    Health
                </th>
                <th>
                    Magic
                </th>

                <th>
                    Select
                </th>
            </tr>
        </thead>
        <tbody>
                    @for (var i = 0; i < Model.SellerCards.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model.SellerCards[i].Card.Champion

                            </td>

                            <td>
                                @switch (Model.SellerCards[i].Card.CardTier)
                                {
                                    case Tier.Tier1:
                                        {

                                            <img src="@($"/images/{Model.SellerCards[i].Card.CardTier.ToString()}.png")">
                                            break;
                                        }
                                    case Tier.Tier2:
                                        {

                                            <img src="@($"/images/{Model.SellerCards[i].Card.CardTier.ToString()}.png")">
                                            break;
                                        }
                                    case Tier.Tier3:
                                        {

                                            <img src="@($"/images/{Model.SellerCards[i].Card.CardTier.ToString()}.png")">
                                            break;
                                        }
                                    case Tier.Tier4:
                                        {

                                            <img src="@($"/images/{Model.SellerCards[i].Card.CardTier.ToString()}.png")">
                                            break;
                                        }
                                    case Tier.Tier5:
                                        {

                                            <img src="@($"/images/{Model.SellerCards[i].Card.CardTier.ToString()}.png")">
                                            break;
                                        }
                                }

                            </td>
                            <td>
                                <div>@Model.SellerCards[i].Card.Damage</div>
                            </td>
                            <td>
                                <div>@Model.SellerCards[i].Card.Health</div>
                            </td>
                            <td>
                                <div>@Model.SellerCards[i].Card.Magic</div>
                            </td>
                            <td>
                                <input type="checkbox" asp-for="@Model.SellerCards[i].IsChecked" />

                            </td>
                        </tr>

                        <input type="hidden" asp-for="@Model.SellerCards[i].CardId" />
                    }
    </table>

</div>



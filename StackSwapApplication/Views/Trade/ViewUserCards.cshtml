<form asp-action="ViewUserCards" asp-controller="Trade">

    <div class="CardSetGrid">
        <div>
            <h4 class="h2Style buyer">Your Cards</h4>
            <div class="wrapperGridL">
                <div class="cardDisplay">
                    @for (var i = 0; i < @Model.BuyerCards.Count; i++)
                    {
                        <div class="@Model.BuyerCards[i].Card.CardTier.ToString()">
                            <div class="newCardName">@Model.BuyerCards[i].Card.Champion</div>
                            <div class="newCardTier">
                                @switch (Model.BuyerCards[i].Card.CardTier)
                                {
                                    case Tier.Tier1:
                                        {
                                            <img src="@($"/images/{Model.BuyerCards[i].Card.CardTier.ToString()}.png")">
                                            break;
                                        }
                                    case Tier.Tier2:
                                        {
                                            <img src="@($"/images/{Model.BuyerCards[i].Card.CardTier.ToString()}.png")">
                                            break;
                                        }
                                    case Tier.Tier3:
                                        {
                                            <img src="@($"/images/{Model.BuyerCards[i].Card.CardTier.ToString()}.png")">
                                            break;
                                        }
                                    case Tier.Tier4:
                                        {
                                            <img src="@($"/images/{Model.BuyerCards[i].Card.CardTier.ToString()}.png")">
                                            break;
                                        }
                                    case Tier.Tier5:
                                        {
                                            <img src="@($"/images/{Model.BuyerCards[i].Card.CardTier.ToString()}.png")">
                                            break;
                                        }
                                }
                                <div><p><img src="~/images/damage.png" />@Model.BuyerCards[i].Card.Damage <img src="~/images/health.png" />@Model.BuyerCards[i].Card.Health <img src="~/images/magic.png" />@Model.BuyerCards[i].Card.Magic</p></div>
                            </div>
                            <input type="checkbox" asp-for="@Model.BuyerCards[i].IsChecked" />
                            <input type="hidden" asp-for="@Model.BuyerCards[i].CardId" />

                        </div>
                    }
                </div>
            </div>
        </div>
        <div>
            <h4 class="h2Style seller">@Model.Seller.Username's Cards </h4>
            <div class="wrapperGridR">
                <div class="cardDisplay">
                    @for(var i = 0;  i < Model.SellerCards.Count; i++)
                    {
                        <div class="@Model.SellerCards[i].Card.CardTier.ToString()">
                            <div class="newCardName">@Model.SellerCards[i].Card.Champion</div>
                            <div class="newCardTier">
                                @switch (Model.SellerCards[i].Card.CardTier)
                                {
                                    case Tier.Tier1:
                                        {
                                            <img src="@($"/images/{Model.SellerCards[i].Card.CardTier.ToString()}.png")">
                                            break;
                                        }
                                    case Tier.Tier2:
                                        {
                                            <img src="@($"/images/{Model.SellerCards[i].Card.CardTier.ToString()}.png")">
                                            break;
                                        }
                                    case Tier.Tier3:
                                        {
                                            <img src="@($"/images/{Model.SellerCards[i].Card.CardTier.ToString()}.png")">
                                            break;
                                        }
                                    case Tier.Tier4:
                                        {
                                            <img src="@($"/images/{Model.SellerCards[i].Card.CardTier.ToString()}.png")">
                                            break;
                                        }
                                    case Tier.Tier5:
                                        {
                                            <img src="@($"/images/{Model.SellerCards[i].Card.CardTier.ToString()}.png")">
                                            break;
                                        }
                                }
                                <div><p><img src="~/images/damage.png" />@Model.SellerCards[i].Card.Damage <img src="~/images/health.png" />@Model.SellerCards[i].Card.Health <img src="~/images/magic.png" />@Model.SellerCards[i].Card.Magic</p></div>
                            </div>

                            <input type="checkbox" asp-for="@Model.SellerCards[i].IsChecked" />
                            <input type="hidden" asp-for="@Model.SellerCards[i].CardId" />
                        </div>
                    }
                </div>
            </div>
        </div>

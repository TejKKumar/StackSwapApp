@model StackSwapApplication.Models.Trade
@{
    ViewData["Title"] = "ViewTradeRequest";
}
<header>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</header>

<h1>Hello @ViewBag.Me</h1>

<h3>Your trade request has been sent.</h3>



<div class="exgrid_Layout">

    <div class="exgrid_Item">
        <h4>Your attempting to trade: </h4>

        <table class="tableStyle">
            <thead>
                <tr>

                    <th>

                        Champion
                    </th>
                    <th>
                        Tier
                    </th>
                    <th>
                        Damage
                    </th>
                    <th>
                        Health
                    </th>
                    <th>
                        Magic
                    </th>
                    <td>
                        Select
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Offered)
                {
                    <tr>
                        <td>
                            @item.Champion

                        </td>

                        <td>
                            @switch (item.CardTier)
                            {
                                case Tier.Tier1:
                                    {

                                        <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                        break;
                                    }
                                case Tier.Tier2:
                                    {

                                        <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                        break;
                                    }
                                case Tier.Tier3:
                                    {

                                        <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                        break;
                                    }
                                case Tier.Tier4:
                                    {

                                        <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                        break;
                                    }
                                case Tier.Tier5:
                                    {

                                        <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                        break;
                                    }
                            }

                        </td>
                        <td>
                            <div>@item.Damage</div>
                        </td>
                        <td>
                            <div>@item.Health</div>
                        </td>
                        <td>
                            <div>@item.Magic</div>
                        </td>
                    </tr>



                }
            </tbody>
        </table>
    </div>
    <div class="exgrid_Item">
        <h4>For: </h4>
        <table class="tableStyle">
            <thead>
                <tr>

                    <th>

                        Champion
                    </th>
                    <th>
                        Tier
                    </th>
                    <th>
                        Damage
                    </th>
                    <th>
                        Health
                    </th>
                    <th>
                        Magic
                    </th>

                    <th>
                        Select
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Requested)
                {
                    <tr>
                        <td>
                            @item.Champion

                        </td>

                        <td>
                            @switch (item.CardTier)
                            {
                                case Tier.Tier1:
                                    {

                                        <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                        break;
                                    }
                                case Tier.Tier2:
                                    {

                                        <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                        break;
                                    }
                                case Tier.Tier3:
                                    {

                                        <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                        break;
                                    }
                                case Tier.Tier4:
                                    {

                                        <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                        break;
                                    }
                                case Tier.Tier5:
                                    {

                                        <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                        break;
                                    }
                            }

                        </td>
                        <td>
                            <div>@item.Damage</div>
                        </td>
                        <td>
                            <div>@item.Health</div>
                        </td>
                        <td>
                            <div>@item.Magic</div>
                        </td>

                    </tr>


                }
        </table>
    </div>
    <div />
</div>




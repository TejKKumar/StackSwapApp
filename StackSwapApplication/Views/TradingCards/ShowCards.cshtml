@model IEnumerable<StackSwapApplication.Models.Card>

@{
    ViewData["Title"] = "ShowCards";
}

<h1>ShowCards</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Champion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardTier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Damage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Magic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Health)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerID)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Champion)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.CardTier) *@

                    @switch (item.CardTier)
                    {
                        case Tier.Tier1:
                            {
                                <label>Novice</label><br/>
                                <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                break;
                            }
                        case Tier.Tier2:
                            {
                                <label>Soldier</label><br/>
                                <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                break;
                            }
                        case Tier.Tier3:
                            {
                                <label>Warrior</label><br/>
                                <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                break;
                            }
                        case Tier.Tier4:
                            {
                                <label>Legend</label><br/>
                                <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                break;
                            }
                        case Tier.Tier5:
                            {
                                <label>Celestial</label><br/>
                                <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                break;
                            }
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Damage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Magic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Health)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.OwnerID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

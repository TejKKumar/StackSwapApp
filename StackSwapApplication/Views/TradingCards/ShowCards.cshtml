@model IEnumerable<StackSwapApplication.Models.Card>
@using StackSwapApplication.Models

@{
    ViewData["Title"] = "ShowCards";
}
<!DOCKTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="~/css/StyleShowCards.css" asp-append-version="true" />
        <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css"/>

    </head>
    <body>
        <header>
                <img src="~/images/StackSwapLogo.jpg" alt="StackSwapLogo" />
                
        <div class="champion">
                @using (Html.BeginForm("GetCardByNamePost", "TradingCards"))
                {
                        <p>
                            Find card by Champion: @Html.TextBox("name")
                        </p>
                        <input type="submit" value="Search" />
                }
        </div>
        <div class="enum-list">
               @using (Html.BeginForm("GetCardByTierPost", "TradingCards"))
                {
                            <p>
                
                                 Find Card By Tier : @Html.DropDownList("tier",Html.GetEnumSelectList(typeof(Tier)))
                            </p>
                            <input type="submit" value="Search" />
                }
        </div>
        <div class="btn-head">
            <a asp-action="MainPage" asp-controller="Home" class="btn btn-primary">Home</a>
        </div>
        </header>

        
<h1>Cards Deck</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Champion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardTier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Damage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Magic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Health)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerID)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Champion)
            </td>
            <td>
                @* @Html.DisplayFor(modelItem => item.CardTier) *@

                    @switch (item.CardTier)
                    {
                        case Tier.Tier1:
                            {
                                <label>Novice</label><br/>
                                <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                break;
                            }
                        case Tier.Tier2:
                            {
                                <label>Soldier</label><br/>
                                <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                break;
                            }
                        case Tier.Tier3:
                            {
                                <label>Warrior</label><br/>
                                <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                break;
                            }
                        case Tier.Tier4:
                            {
                                <label>Legend</label><br/>
                                <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                break;
                            }
                        case Tier.Tier5:
                            {
                                <label>Celestial</label><br/>
                                <img src="@($"/images/{item.CardTier.ToString()}.png")">
                                break;
                            }
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Damage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Magic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Health)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.OwnerID)
            </td>
            
        </tr>
}
    </tbody>
</table>



</body>
</html>
    
